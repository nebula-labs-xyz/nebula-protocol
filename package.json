{
  "name": "nebula-protocol",
  "private": false,
  "description": "Nebula Lending Protocol",
  "homepage": "https://github.com/nebula-labs-xyz/nebula-protocol#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nebula-labs-xyz/nebula-protocol.git"
  },
  "license": "BUSL-1.1",
  "author": "Nebula Labs Inc",
  "scripts": {
    "build": "forge clean && forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "coverage": "forge coverage --match-contract Unit",
    "deploy:mainnet": "bash -c 'source .env && forge script Deploy --broadcast --chain mainnet --private-key $MAINNET_DEPLOYER_PK'",
    "deploy:sepolia": "bash -c 'source .env && forge script Deploy --broadcast --chain sepolia --private-key $SEPOLIA_DEPLOYER_PK'",
    "lint:check": "npm run lint:sol-tests && npm run lint:sol-logic && forge fmt --check",
    "lint:fix": "sort-package-json && forge fmt && npm run lint:sol-tests --fix && npm run lint:sol-logic --fix",
    "lint:natspec": "npx @defi-wonderland/natspec-smells --config natspec.config.js",
    "lint:sol-logic": "solhint -c .solhint.json 'contracts/ecosystem/*.sol' 'contracts/lender/*.sol' 'script/**/*.sol'",
    "lint:sol-tests": "solhint -c .solhint.tests.json 'test/ecosystem/*.sol'",
    "prepare": "husky",
    "test": "forge test -vvv --ffi",
    "test:integration": "forge test --match-contract Integration -vvv",
    "test:unit": "forge test --match-contract Unit -vvv",
    "test:unit:deep": "FOUNDRY_FUZZ_RUNS=5000 npm run test:unit"
  },
  "lint-staged": {
    "./contracts/**/*.sol": "forge fmt && npm run lint:sol-logic",
    "./test/**/*.sol": "npm run lint:sol-tests",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "19.0.3",
    "@commitlint/config-conventional": "19.0.3",
    "@defi-wonderland/natspec-smells": "1.1.1",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/upgrades-core": "^1.32.3",
    "ds-test": "github:dapphub/ds-test#e282159",
    "forge-std": "github:foundry-rs/forge-std#4513bc2",
    "husky": "^8.0.0",
    "lint-staged": "15.2.2",
    "solhint": "github:solhint-community/solhint-community#v4.0.0-rc01",
    "sort-package-json": "2.8.0"
  }
}
